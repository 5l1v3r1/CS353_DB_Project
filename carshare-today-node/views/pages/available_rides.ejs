<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
</head>

<body>

<% include ../partials/profile_navbar.ejs %>

<h4>Filter rides by location or see below for the full list</h4>

<form class="form-horizontal" method="post" action="/available_rides">

    <div class="form-group col-md-5">
        <label for="name" class="cols-sm-2 control-label">Pickup Location</label>
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
                <input type="text" class="form-control" name="filter[pickup]" id="name"
                       placeholder="e.g: magdalene"/>
            </div>
        </div>
    </div>


    <div class="form-group col-md-5">
        <label for="name" class="cols-sm-2 control-label">Dropoff Location</label>
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-home" aria-hidden="true"></i></span>
                <input type="text" class="form-control" name="filter[dropoff]" id="name"
                       placeholder="e.g: airport"/>
            </div>
        </div>
    </div>

    <div class="form-group col-md-2">
        <label for="name" class="cols-sm-2 control-label"></label>
        <button name="submit" type="submit" class="btn btn-primary btn-block login-button">Filter
        </button>
    </div>
</form>


<div class="col-md-12">
    <div class="table-responsive">
        <table id="table" class="table col-md-12">
            <thead>
            <tr>
                <th>Number of Empty Seats</th>
                <th>Date and Time</th>
                <th>Pickup Location</th>
                <th>Dropoff Location</th>
                <th>Driver ID</th>
                <th>Driver License Plate</th>
                <th>Max Luggage</th>
                <th>Pickup Flexibility</th>
                <th>Possible Detour</th>
                <th>Other Details</th>
            </tr>
            </thead>
            <tbody>
            <% print.forEach(function (ride) { %>
            <tr>
                <td><%= ride.number_of_empty_seats %></td>
                <td><%= ride.date_and_time %></td>
                <td><%= ride.pickup_location %></td>
                <td><%= ride.dropoff_location %></td>
                <td><%= ride.driver_id %></td>
                <td><%= ride.driver_license_plate %></td>
                <td><%= ride.max_luggage %></td>
                <td><%= ride.pickup_flexibility %></td>
                <td><%= ride.possible_detour %></td>
                <td><%= ride.other_details %></td>
            </tr>
            <% }) %>
            </tbody>
        </table>
    </div>

</div>

<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $(".btn-pref .btn").click(function () {
            $(".btn-pref .btn").removeClass("btn-primary").addClass("btn-default");
            // $(".tab").addClass("active"); // instead of this do the below
            $(this).removeClass("btn-default").addClass("btn-primary");
        });
    });
</script>
</body>
</html>
